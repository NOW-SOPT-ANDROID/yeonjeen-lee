<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvSignUpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up_English"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvSignUpIdTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/id"
        android:layout_marginTop="40dp"
        android:textSize="25dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvSignUpTitle"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/etSignUpID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_ID"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvSignUpIdTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSignUpPsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ps_title"
        android:textSize="25dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@id/tvSignUpIdTitle"
        app:layout_constraintTop_toBottomOf="@id/etSignUpID"/>

    <EditText
        android:id="@+id/etSignUpPs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_ps"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSignUpPsTitle"/>

    <TextView
        android:id="@+id/tvSignUpNickNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nickname"
        android:textSize="25dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/etSignUpPs"
        app:layout_constraintStart_toStartOf="@id/etSignUpPs"/>

    <EditText
        android:id="@+id/etSignUpNickName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_nickname"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSignUpNickNameTitle"/>

    <TextView
        android:id="@+id/tvSignUpMbtiTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mbti"
        android:textSize="25dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/etSignUpNickName"
        app:layout_constraintStart_toStartOf="@id/etSignUpNickName"/>
    <Spinner
        android:id="@+id/spSignUpMbti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvSignUpMbtiTitle"
        app:layout_constraintStart_toStartOf="@id/tvSignUpMbtiTitle"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGotoSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/signup"
        android:textColor="@color/white"
        android:background="@drawable/bg_solid100_purple"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>