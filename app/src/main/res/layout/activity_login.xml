<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvLoginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to_sopt"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvLoginIdTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/id"
        android:layout_marginTop="40dp"
        android:textSize="25dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvLoginTitle"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/etLoginID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_ID"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvLoginIdTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvLoginPsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ps_title"
        android:textSize="25dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@id/tvLoginIdTitle"
        app:layout_constraintTop_toBottomOf="@id/etLoginID"/>

    <EditText
        android:id="@+id/etLiginPs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_ps"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLoginPsTitle"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/do_login"
        android:textColor="@color/white"
        android:background="@drawable/bg_solid100_purple"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/btnGotoSignUp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGotoSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입하기"
        android:textColor="@color/white"
        android:background="@drawable/bg_solid100_purple"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>