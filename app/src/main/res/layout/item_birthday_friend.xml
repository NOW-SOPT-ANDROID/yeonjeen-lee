<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivHomeBirthday"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/bg_conersize40"
        tool:src="@drawable/img_yeonjeen" />

    <TextView
        android:id="@+id/tvHomeBirthdayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/ivHomeBirthday"
        app:layout_constraintTop_toTopOf="@id/ivHomeBirthday"
        tool:text="이연진"/>

    <ImageView
        android:id="@+id/tvHomeBirthdayMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tag_yellow"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/tvHomeBirthdayName"
        app:layout_constraintStart_toEndOf="@id/tvHomeBirthdayName"
        app:layout_constraintBottom_toBottomOf="@id/tvHomeBirthdayName"/>

    <TextView
        android:id="@+id/tvHomeBirthdayDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#7E7777"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/ivHomeBirthday"
        app:layout_constraintStart_toStartOf="@id/tvHomeBirthdayName"
        app:layout_constraintTop_toBottomOf="@id/tvHomeBirthdayName"
        tool:text="나는 이연진. 짱짱 개발자가 될거야." />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnHomeBirthdayGiveGift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선물하기"
        android:background="@drawable/bg_solid200_green"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>